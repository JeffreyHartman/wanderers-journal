---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="max-w-4xl mx-auto">
			<div class="py-12">
				<h1 class="text-center text-4xl font-bold mb-8">The Wanderers Journal</h1>
				<p class="text-xl mb-12">Hello ðŸ‘‹, I'm Jeff! This blog will serve to 
					document my various RPG adventures and musings. 
				</p>
			</div>
			<section>
				<h2 class="text-2xl font-bold mb-6">Recent Posts</h2>
				<div class="space-y-8">
				  {
					posts.map((post) => (
					  <article class="border-b border-gray-700 pb-8">
						<h3 class="text-xl font-bold mb-2">
						  <a href={`/blog/${post.id}`} class="hover:text-orange-500">
							{post.data.title}
						  </a>
						</h3>
						<time class="text-gray-400 text-sm">
						  {post.data.pubDate.toLocaleDateString()}
						</time>
						<p class="mt-2">{post.data.description}</p>
					  </article>
					))
				  }
				</div>
			  </section>
		</main>
		<Footer />
	</body>
</html>
