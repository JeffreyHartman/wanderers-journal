---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---
<header class="relative py-4">
    <!-- Decorative border -->
    <div class="absolute bottom-0 left-0 right-0 h-[2px] bg-gradient-to-r from-transparent via-amber-800/20 to-transparent"></div>
   
    <nav class="max-w-4xl mx-auto px-4 flex flex-col sm:flex-row justify-between items-center gap-2 sm:gap-6">
        <a href={import.meta.env.BASE_URL} class="text-xl sm:text-2xl font-heading title">
            The Wanderer's Journal
        </a>
       
        <div class="flex gap-4 sm:gap-6">
            <HeaderLink href="/blog">Blog</HeaderLink>
        </div>
    </nav>
</header>
<style>
    header {
        margin: 0;
        padding: 0.5em 1em;
        background: transparent;
    }
    nav a {
        padding: 1em 0.5em;
        color: var(--black);
    }
    nav a:hover {
        color: #8B4513;
    }
    nav a.active {
        border-bottom: 2px solid #8B4513;
    }
</style>